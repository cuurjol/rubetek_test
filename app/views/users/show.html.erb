<%= form_for(@user, html: { class: 'panel panel-default' }) do |f| %>
  <div class="panel-heading">
    <h1 class="panel-title"><strong><%= t('.title') %></strong></h1>
  </div>

  <div class="panel-body">
    <div class="form-group">
      <%= f.label :last_name %>
      <%= f.text_field :last_name, class: 'form-control', readonly: true %>
    </div>

    <div class="form-group">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, class: 'form-control', readonly: true %>
    </div>

    <div class="form-group">
      <%= f.label :middle_name %>
      <%= f.text_field :middle_name, class: 'form-control', readonly: true %>
    </div>

    <% if current_user.dweller? || @user.dweller? %>
      <div class="form-group">
        <%= f.label :address %>
        <%= f.text_area :address, class: 'form-control', readonly: true %>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :email %>
      <%= f.text_field :email, class: 'form-control', readonly: true %>
    </div>

    <% if current_user.admin? %>
      <div class="form-group">
        <%= f.label :role %>
        <%= f.text_field :role, class: 'form-control', readonly: true %>
      </div>
    <% end %>

    <div class="actions">
      <%= link_to t('.buttons.edit'), edit_user_path(@user), class: 'btn btn-success' %>
    </div>
  </div>
  <div class="panel-footer">
    <%= link_to t('.buttons.cancel'), root_path, class: 'btn btn-primary' %>
  </div>
<% end %>
