<%= form_for(@water_meter_reading, html: { class: 'panel panel-default' }) do |f| %>
  <div class="panel-heading">
    <h1 class="panel-title"><strong><%= water_meter_reading_title_form(@water_meter_reading) %></strong></h1>
  </div>

  <div class="panel-body">
    <div class="form-group <%= "has-error" if f.errors_on?(:hot) %>">
      <%= f.label :hot %>
      <%= f.number_field :hot, step: 0.001, class: 'form-control' %>
      <%= f.error_span(:hot) %>
    </div>

    <div class="form-group <%= "has-error" if f.errors_on?(:cold) %>">
      <%= f.label :cold %>
      <%= f.number_field :cold, step: 0.001, class: 'form-control' %>
      <%= f.error_span(:cold) %>
    </div>

    <div class="actions">
      <%= f.submit t('.buttons.save'), class: 'btn btn-success' %>
    </div>
  </div>
  <div class="panel-footer">
    <%= link_to(t('water_meter_readings.form.links.root_back'), root_path, class: 'btn btn-primary') %>
  </div>
<% end %>
